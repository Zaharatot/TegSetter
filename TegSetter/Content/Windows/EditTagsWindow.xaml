<Window x:Class="TegSetter.Content.Windows.EditTagsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TegSetter.Content.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        Closing="Window_Closing" KeyDown="Window_KeyDown"
        Title="EditTagsWindow" Height="450" Width="360">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <!-- Список с тегами -->
        <ListBox x:Name="TagsListBox" Grid.Row="0" Margin="5" />
        <!-- Кнопки работы с тегами -->
        <Button x:Name="DeleteTagButton" Content="Удалить тег" Grid.Row="1" Margin="5" 
                HorizontalAlignment="Left" Width="150" Click="DeleteTagButton_Click" />
        <Button x:Name="AddTagButton" Content="Добавить тег" Grid.Row="1" Margin="5" 
                HorizontalAlignment="Right" Width="150" Click="AddTagButton_Click" />
        <Button x:Name="SaveChangesButton" Content="Сохранить изменния" Grid.Row="2" 
                Margin="5" Click="SaveChangesButton_Click" />
    </Grid>
</Window>
