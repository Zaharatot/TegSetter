<Window x:Class="TegSetter.Content.Windows.TagSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TegSetter.Content.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow"
        KeyDown="Window_KeyDown"
        Title="TagSelectorWindow" Height="450" Width="400">
    <!-- Основная панель -->
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <!-- Список для тегов -->
        <ListBox x:Name="TagsListBox" Margin="0,0,0,5" />
        <!-- Кнопка принятия тегов -->
        <Button x:Name="OkButton" Content="Выбрать теги" Grid.Row="1" Click="OkButton_Click" />
    </Grid>
</Window>
