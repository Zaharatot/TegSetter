<UserControl x:Class="TegSetter.Content.Controls.ViewImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TegSetter.Content.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- РАмка вокруг картинки -->
    <Border Background="#999" CornerRadius="10" Padding="10" Margin="5" BorderThickness="2" BorderBrush="Black">
        <!-- Картинка для загрузки -->
        <Image x:Name="LoadedImage" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Border>
</UserControl>
