<UserControl x:Class="TegSetter.Content.Controls.Tags.ImageTags"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TegSetter.Content.Controls.Tags"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Рамка вокруг контролла -->
    <Border Background="#999" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Margin="5" Padding="10">
        <!-- Панель скролла -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <!-- Панель для добавления тегов -->
            <WrapPanel x:Name="TagsPanel" />
        </ScrollViewer>
    </Border>
</UserControl>
