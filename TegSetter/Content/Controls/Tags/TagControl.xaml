<UserControl x:Class="TegSetter.Content.Controls.Tags.TagControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TegSetter.Content.Controls.Tags"
             mc:Ignorable="d" 
             Height="50" d:DesignWidth="180">
    <!-- Рамка для тега -->
    <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="5">
        <Border.ToolTip>
            <TextBlock x:Name="ToolTipTextBlock" />
        </Border.ToolTip>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition x:Name="RemoveButtonColumn" Width="40" />
            </Grid.ColumnDefinitions>
            <!-- Блок с именем тега -->
            <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="15"
                       MaxWidth="300" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"  Margin="5" >
                <Run x:Name="TagLetterRun" Text="[ Z ]" Foreground="Green" />
                <Run x:Name="TagNameRun" Text="Имя тега" />
            </TextBlock>
            <!-- Кнопка удаления тега -->
            <Button x:Name="RemoveTagButton" Content="X" Margin="5" Grid.Column="1" Click="RemoveTagButton_Click" 
                    Background="Transparent" Foreground="Red" BorderBrush="Red" Padding="0,0,0,0"/>
        </Grid>
    </Border>
</UserControl>
