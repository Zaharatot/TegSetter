<UserControl x:Class="TegSetter.Content.Controls.Tags.TagsGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TegSetter.Content.Controls.Tags"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!-- Рамка вокруг контролла -->
    <Border Background="White" BorderBrush="Black" BorderThickness="1" 
            CornerRadius="10" Margin="5" Padding="10">
        <!-- Контролл для свёртывания контента -->
        <Expander x:Name="GroupExpander" Collapsed="GroupExpander_Collapsed">
            <StackPanel x:Name="TagsPanel" Margin="0,5,0,0" />
        </Expander>
    </Border>
</UserControl>
